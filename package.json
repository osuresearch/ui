{
  "name": "@osuresearch/ui",
  "version": "4.8.0",
  "description": "React UI components for ORIS applications",
  "author": "Chase McManning <mcmanning.1@osu.edu>",
  "license": "MIT",
  "homepage": "https://github.com/osuresearch/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/osuresearch/ui"
  },
  "bugs": {
    "url": "https://github.com/osuresearch/ui/issues"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npx styleguidist server",
    "build:styleguide": "npx styleguidist build",
    "build:components": "npx babel ./src --out-dir ./dist --extensions \".tsx,.ts,.js\"",
    "build:ts-declarations": "npx tsc --declaration --outDir ./dist --emitDeclarationOnly --declarationMap || echo tsc done, possibly with ignored errors.",
    "build:copy-sass": "node ./scripts/copy-sass.js",
    "build": "npm run clear-dist && npm-run-all --parallel build:components --serial build:ts-declarations build:copy-sass",
    "test": "react-scripts test",
    "clear-dist": "node ./scripts/clear-dist"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@types/diff": "^4.0.2",
    "@types/lodash": "^4.14.162",
    "@types/react-datepicker": "^3.1.1",
    "ckeditor4-react": "^1.2.0",
    "dayjs": "^1.9.1",
    "diff": "^4.0.2",
    "primeicons": "^6.0.1",
    "primereact": "^6.6.0",
    "rangy": "^1.3.0",
    "react-children-utilities": "^2.8.0",
    "react-datepicker": "^3",
    "react-dropzone": "^10.1.8",
    "react-dropzone-uploader": "^2.11.0",
    "react-transition-group": "^4.4.1",
    "time-input-polyfill": "^1.0.9"
  },
  "//dependencies": {
    "react-dropzone": "Dependency of Files component"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0",
    "react-router-dom": ">=5.0.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.2.0",
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/plugin-transform-typescript": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@babel/register": "^7.7.7",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/bytes": "^3.1.1",
    "@types/faker": "^5.1.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.22",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.5",
    "acorn": "^6.4.0",
    "dotenv": "^14.2.0",
    "faker": "^5.1.0",
    "graphql": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-docgen-typescript": "^1.20.5",
    "react-dom": "^16.12.0",
    "react-hook-form": "^7.27.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.3",
