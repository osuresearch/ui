{
  "name": "@osuresearch/ui",
  "version": "5.0.0",
  "license": "MIT",
  "private": false,
  "description": "React UI components for OSU Office of Research applications",
  "keywords": [
    "ohio-state-university"
  ],
  "homepage": "https://github.com/osuresearch/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/osuresearch/ui"
  },
  "bugs": {
    "url": "https://github.com/osuresearch/ui/issues"
  },
  "author": {
    "name": "Chase McManning",
    "url": "https://github.com/McManning"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest",
    "build": "microbundle --jsx React.createElement --jsxFragment React.Fragment",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "lint": "eslint . --cache --ext ts,tsx --fix",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook",
    "build:tailwind": "npx tailwindcss -o ./dist/tailwind.css",
    "generate:component": "node ./scripts/newComponent.mjs"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@emotion/react": "^11.10.5",
    "@geometricpanda/storybook-addon-badges": "^0.2.2",
    "@iconify/icons-bi": "^1.2.13",
    "@iconify/icons-material-symbols": "^1.2.25",
    "@iconify/react": "^4.0.1",
    "@mantine/utils": "^5.9.3",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-interactions": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack4": "^6.5.14",
    "@storybook/manager-webpack4": "^6.5.14",
    "@storybook/react": "^6.5.14",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "classnames": "^2.3.2",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "inquirer": "^9.1.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook-dark-mode": "^2.0.4",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "mrmConfig": {
    "defaultBranch": "main",
    "contributionPolicy": "internal",
    "dataClassification": "public",
    "securityContact": "ordevelopment@osu.edu",
    "conductContact": "ordevelopment@osu.edu"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "arrayParens": "always",
    "arrowParens": "always",
    "bracketSpacing": true,
    "parser": "typescript",
    "printWidth": 100,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run lint"
  }
}
